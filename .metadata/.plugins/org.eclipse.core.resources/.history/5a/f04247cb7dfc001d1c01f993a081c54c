#include <stdio.h>
#include <stdlib.h>

int findLargest(int a[10]);

int main(void) {
int i, largest, a[10], n,c;
setbuf(stdout, NULL);
printf("Enter array size");
scanf("%d", &n);

printf("Enter array: ");

	for(i=0; i<n; i++){
		scanf("%d", &a[i]);
	}
c =findlargest(int a[]);


	return EXIT_SUCCESS;
}


int findlargest(int a[]){


	largest = a[0];
		for(i=0; i<n; i++){

			if(a[i]> largest)
				largest = a[i];
		}
		printf("largest: %d ", largest);

		return largest;
		}
