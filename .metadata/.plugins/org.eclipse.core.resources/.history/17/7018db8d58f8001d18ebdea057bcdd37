#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int i,max,n, a[10];
	setbuf(stdout, NULL);
	n=sizeof(a)/sizeof(a[0]);

	for(i=0; i<n; i++){
		if(max<a[i])
			max=a[i];

	}
	printf("largest ele in Array: %d", max);

	return EXIT_SUCCESS;
}
