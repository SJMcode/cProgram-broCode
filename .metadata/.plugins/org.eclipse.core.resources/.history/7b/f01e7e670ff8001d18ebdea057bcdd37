#include <stdio.h>

int main(){

int i,j,n;
	setbuf(stdout, NULL);

	printf("Enter rows: ");
	scanf("%d", &n);


	for(i=0; i<=n; i++){

	for(j=-n; j<=n; j++){

		//up arrow condition : -i < j && j < i
		// down arrow condition : -(n-i) < j && j < (n-i)
		if((-(i)<j)  && j<(i) )
			printf("  ");
		else
			printf("* ");
	}





		printf("\n");

		return 0;
	}
