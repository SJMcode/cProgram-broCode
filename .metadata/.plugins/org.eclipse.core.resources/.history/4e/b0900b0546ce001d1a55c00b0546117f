#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int n;
	printf("Enter the limit: ");
	scanf("%d",&n);

	for(int i=0; i<n; i++){

		printf("Hello");
	}




	return EXIT_SUCCESS;
}
