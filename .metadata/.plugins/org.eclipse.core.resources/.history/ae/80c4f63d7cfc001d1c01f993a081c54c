#include <stdio.h>
#include <stdlib.h>

int main(void) {


int i, largest, a[10], n;

printf("Enter array size");
scanf("%d", &n);
printf("Enter array: ");
for(i=0; i<n; i++){
	scanf("%d", &a[i]);
}
largest = a[0];
for(i=0; i<n; i++){

	if(a[i]> largest)
		largest = a[i];
}
printf("%d ", largest);

	return EXIT_SUCCESS;
}
